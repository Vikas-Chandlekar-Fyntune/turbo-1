{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx", // ✅ enables JSX (for React 17+)
    "lib": ["dom", "esnext"], // ✅ ensures DOM types are available
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
